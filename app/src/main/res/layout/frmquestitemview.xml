<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
    <include layout = "@layout/header"/>
    <include layout = "@layout/footer"/>
    
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    		android:id="@+id/pnlScroll" 
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:scrollbars="none"
    		android:layout_above="@+id/pnlFooter" 
    		android:layout_below="@+id/pnlHeader">
    		
	    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    >
	    	<TextView
								android:id="@+id/lbl_pnlQuestItem_blank1"
								android:layout_height="wrap_content"
								android:layout_width="wrap_content"
								android:text=" "
			/>
			<ImageView          android:id="@+id/img_questitem" 
								android:layout_width="wrap_content" 
								android:layout_height="wrap_content"
								android:layout_below="@id/lbl_pnlQuestItem_blank1"
			/>
			<TextView
								android:id="@+id/lbl_questitem_name"
								android:layout_height="wrap_content"
								android:layout_width="fill_parent"
		    					android:textColor="@color/orange2"
		    					android:textSize="15sp"
		    					android:layout_toRightOf="@id/img_questitem"
		    					android:layout_below="@id/lbl_pnlQuestItem_blank1"
			/>
			
			<TextView
								android:id="@+id/lbl_pnlQuestItem_blank2"
								android:layout_height="wrap_content"
								android:layout_width="fill_parent"
								android:text=" "
		    					android:layout_below="@id/img_questitem"
			/>
			<TextView
								android:id="@+id/lbl_questitem_type_title"
								android:layout_height="wrap_content"
								android:layout_width="fill_parent"
								android:text="任务:"
		    					android:textColor="@color/white"
		    					android:layout_below="@id/lbl_pnlQuestItem_blank2"
			/>
			<TextView
								android:id="@+id/lbl_questitem_type"
								android:layout_height="wrap_content"
								android:layout_width="fill_parent"
		    					android:textColor="@color/orange2"
		    					android:layout_below="@id/lbl_questitem_type_title"
			/>
			<TextView
								android:id="@+id/lbl_pnlQuestItem_blank3"
								android:layout_height="wrap_content"
								android:layout_width="fill_parent"
								android:text=" "
		    					android:layout_below="@id/lbl_questitem_type"
			/>
			<TextView
								android:id="@+id/lbl_questitem_cls_title"
								android:layout_height="wrap_content"
								android:layout_width="fill_parent"
								android:text="位置/掉落:"
		    					android:textColor="@color/white"
		    					android:layout_below="@id/lbl_pnlQuestItem_blank3"
			/>
			<TextView
								android:id="@+id/lbl_questitem_cls"
								android:layout_height="wrap_content"
								android:layout_width="fill_parent"
		    					android:textColor="@color/orange2"
		    					android:layout_below="@id/lbl_questitem_cls_title"
			/>
			<TextView
								android:id="@+id/lbl_pnlQuestItem_blank4"
								android:layout_height="wrap_content"
								android:layout_width="fill_parent"
								android:text=" "
		    					android:layout_below="@id/lbl_questitem_cls"
			/>
			<TextView
								android:id="@+id/lbl_questitem_comment1"
								android:layout_height="wrap_content"
								android:layout_width="fill_parent"
		    					android:textColor="@color/white"
		    					android:layout_below="@id/lbl_pnlQuestItem_blank4"
			/>
			<TextView
								android:id="@+id/lbl_questitem_comment2"
								android:layout_height="wrap_content"
								android:layout_width="fill_parent"
		    					android:textColor="@color/blue"
		    					android:layout_below="@id/lbl_questitem_comment1"
			/>
			<TextView
								android:id="@+id/lbl_pnlQuestItem_blank5"
								android:layout_height="wrap_content"
								android:layout_width="fill_parent"
								android:text=" "
		    					android:layout_below="@id/lbl_questitem_comment2"
			/>
	    </RelativeLayout>
	    
    </ScrollView>
    
</RelativeLayout>