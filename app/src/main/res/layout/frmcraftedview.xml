<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
    <include layout = "@layout/header"/>
	<include layout = "@layout/footer"/>
    
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:scrollbars="none"
    		android:layout_above="@+id/pnlFooter" 
    		android:layout_below="@+id/pnlHeader">
    		
	    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    >
	    	<TextView
				android:id="@+id/txtBlank0"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
		    	android:text = " "
		    	android:textSize="16sp"
			/>
	    	<TextView
				android:id="@+id/txtCraftedName"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
		    	android:textColor="@color/orange4"
		    	android:textSize="16sp"
		    	android:layout_below="@id/txtBlank0"
			/>
			<TextView
				android:id="@+id/txtCraftedType"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
		    	android:textSize="14sp"
		    	android:textColor="@color/gold"
		    	android:layout_below="@id/txtCraftedName"
			/>
			<TextView
				android:id="@+id/txtBlank1"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
		    	android:text = " "
		    	android:textSize="16sp"
		    	android:layout_below="@id/txtCraftedType"
			/>
			<ImageView android:id="@+id/imgCrafted1" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_below="@id/txtBlank1">
			</ImageView>
			<ImageView android:id="@+id/imgCrafted2" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_below="@id/txtBlank1"
				android:layout_toRightOf="@id/imgCrafted1">
			</ImageView>
			<ImageView android:id="@+id/imgCrafted3" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_below="@id/txtBlank1"
				android:layout_toRightOf="@id/imgCrafted2">
			</ImageView>
			<ImageView android:id="@+id/imgCrafted4" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_below="@id/txtBlank1"
				android:layout_toRightOf="@id/imgCrafted3">
			</ImageView>
			<TextView
				android:id="@+id/txtBlank2"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
		    	android:text = " "
		    	android:textSize="16sp"
		    	android:layout_below="@id/imgCrafted1"
			/>
			<TextView
				android:id="@+id/txtCraftedCls"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
		    	android:textSize="14sp"
		    	android:textColor="@color/gold"
		    	android:layout_below="@id/txtBlank2"
			/>
			<TextView
				android:id="@+id/txtBlank3"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
		    	android:text = " "
		    	android:textSize="16sp"
		    	android:layout_below="@id/txtCraftedCls"
			/>
			<TextView
				android:id="@+id/txtCraftedComment1"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
		    	android:textSize="14sp"
		    	android:textColor="@color/blue"
		    	android:layout_below="@id/txtBlank3"
			/>
	    </RelativeLayout>
    </ScrollView>
    
</RelativeLayout>